<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_patient_add_edit_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="com.skywomantech.app.symptommanagement.admin.Physician.AdminPatientDetailFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="@android:dimen/app_icon_size"
            android:text="PATIENT DETAILS :"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/admin_patient_edit_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="@android:dimen/app_icon_size"
                android:hint="First Name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName|textCapWords"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/admin_patient_edit_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="@android:dimen/app_icon_size"
                android:hint="Last Name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName|textCapWords"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/admin_patient_edit_birthdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="@android:dimen/app_icon_size"
                android:hint="Birthday mm/dd/yyyy"
                android:imeOptions="actionNext"
                android:inputType="date"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/patient_physicians_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="@android:dimen/app_icon_size"
                android:padding="12dp"
                android:text="ASSIGNED PHYSICIANS :"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/add_physician_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Add Physician" />

        </LinearLayout>

        <ListView
            android:id="@+id/admin_patient_physician_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ListView>


        <Button
            android:id="@+id/save_patient_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Save Patient"></Button>

    </LinearLayout>

</LinearLayout>