<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/patient_medication_check_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Did you  take OxyContin?"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/patient_medication_check_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taken at 2:00 PM"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/patient_medication_check_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:contentDescription="Medication Check Answer"
        android:checked="false"
        android:padding="8dp" />

</LinearLayout>