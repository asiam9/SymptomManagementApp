<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adminpatient_detail"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:textIsSelectable="true"
    tools:context="com.skywomantech.app.symptommanagement.admin.Patient.AdminPatientDetailFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="@android:dimen/app_icon_size"
            android:text="PATIENT DETAILS :"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/admin_patient_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="@android:dimen/app_icon_size"
            android:editable="true"
            android:text="Patient Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/patient_physicians_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="@android:dimen/app_icon_size"
            android:text="Physicians :"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ListView
            android:id="@+id/patient_physicians_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="@android:dimen/app_icon_size" />

    </LinearLayout>

</ScrollView>
