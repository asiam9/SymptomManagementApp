<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:text="Symptom Management Tracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/patient_main_title"
        android:textStyle="bold"
        android:textSize="24sp" />

    <TextView
        android:text="for Lisa Lee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_patient_name"
        android:textStyle="bold"
        android:textSize="24sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Pain Log"
        android:id="@+id/pain_log_button"
        android:layout_marginTop="32sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Medication Log"
        android:id="@+id/medication_log_button"
        android:layout_marginTop="24sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Status Notes"
        android:id="@+id/status_log_button"
        android:layout_marginTop="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Next Checkin is at 8:30 AM"
        android:id="@+id/next_check_in"
        android:layout_marginTop="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="4 Check-Ins Completed Today"
        android:id="@+id/check_ins_completed"
        android:layout_marginTop="43dp" />

    </LinearLayout>
</ScrollView>
