<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notes_image_page"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Symptom Notes"
        android:id="@+id/symptom_note_header"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:inputType="textMultiLine"
        android:ems="10"
        android:lines="3"
        android:id="@+id/symptom_note"
        android:gravity="left|top"
        android:layout_gravity="center_horizontal"
        android:hint="Enter Notes Here"
        android:padding="24dp"
        android:background="#fffff7de" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status_imageButton"
        android:layout_gravity="center_horizontal"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_margin="16dp"
        android:padding="8dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/camera_picture_view"
        android:layout_gravity="center_horizontal"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="No Image for this Note"
        android:id="@+id/image_status"
        android:layout_gravity="center_horizontal"
        android:padding="8dp" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/status_save_button"
        android:layout_gravity="center_horizontal"
        android:padding="4dp"
        android:layout_margin="8dp"/>

</LinearLayout>
</ScrollView>